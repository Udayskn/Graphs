#include <bits/stdc++.h>
using namespace std;

int main() {
  
 ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  int n,m,a,b;
  cin>>n>>m;
  vector<vector<int>>adj(n+1);
  for(int i=0;i<m;i++){
    cin>>a>>b;
    adj[a].push_back(b);
    adj[b].push_back(a);
  }
  int p,r;
  cin>>p>>r;
  vector<int>visited(n+1,0);
  queue<int>q;
  q.push(p);
  visited[p]=1;
  vector<int>dist(n+1,INT_MAX);
  dist[p]=0;
  int count1=0,count2=0;
  while(!q.empty()){
    count1++;
    a=q.front();
    q.pop();
    for(auto c:adj[a]){
      if(!visited[c]){
        visited[c]=1;
        q.push(c);
        dist[c]=dist[a]+1;
      }
    }
  }
  if(visited[r])cout<<dist[r];
  else cout<<0;
  return 0;

}
